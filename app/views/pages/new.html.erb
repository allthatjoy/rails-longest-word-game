<h1>New Game</h1>

<div class="list">
  <ul>
    <% @ten_letters.each do |letter| %>
    <li><%= letter %></li>
    <% end  %>
  </ul>
</div>

<div class="game_input">
  <h2>What is the longest word you can find?</h2>
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input id="answer" type="text" name="word" placeholder="enter your answer">
    <input id="sendword" name="sendword" type="hidden" value="<%= @ten_letters.join(',') %>">
    <input type="submit" value="Play">
  </form>
</div>

<style>
h1, h2{
  text-align: center;
}
  .list, .game_input form{
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 50px;
  }
  li{
    list-style: none;
    display: inline;
    padding: 10px;
    margin: 50px 10px;
    font-size: 30px;
    background-color: blue;
    color: white;
  }
  #answer{
    width: 500px;
    height: 50px;
  }
</style>
